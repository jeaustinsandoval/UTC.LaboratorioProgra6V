@page
@model WebApp.Pages.Proveedores.GridModel
@{
}
<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Proveedores
        </div>
        <div class="card-body">

            <a class="btn btn-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>


            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-striped table table-hover table table-bordered ">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Identificación</th>
                                <th>Nombre</th>
                                <th>Primer Apellido</th>
                                <th>Segundo Apellido</th>
                                <th>Edad</th>
                                <th>Fecha Nacimiento</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.GridList)
                            { 
                            <tr>
                                <td>@item.IdProveedor</td>
                                <td>@item.Identificacion</td>
                                <td>@item.Nombre</td>
                                <td>@item.PrimerApellido</td>
                                <td>@item.SegundoApellido</td>
                                <td>@item.Edad</td>
                                <td>@item.FechaNacimiento</td>
                                <td>
                                    <a class="btn btn-primary" asp-page="Edit" asp-route-id="@item.IdProveedor">
                                        <i class='bx bx-edit-alt'></i>
                                    </a>
                                    <button type="button" class="btn btn-danger" onclick="GridProveedor.OnclickEliminar(@item.IdProveedor)">
                                        <i class='bx bxs-trash'></i>
                                    </button>
                                </td>
                            </tr>                            
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>


</div>
@section  Scripts{ 

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Proveedor/Grid.js"></script>
}